[user]
	name = Fabian DÃ¶rk
	email = fabian.doerk@de.clara.net
[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[push]
	default = simple
[core]
	editor = /usr/local/bin/nvim
[merge]
	tool = vimdiff
	conflictstyle = diff3
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	l = log --abbrev-commit --graph --stat
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	dt = difftool
[diff]
	submodule = log
	tool = vimdiff
[status]
	submodulesummary = true
[log]
	abbrevCommit = true
[branch]
	autosetupmerge = true
[difftool]
	prompt = false
